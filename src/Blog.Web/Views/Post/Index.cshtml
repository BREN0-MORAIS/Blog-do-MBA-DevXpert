@using Blog.Core.Entities
@using Microsoft.AspNetCore.Identity
@model Post
@inject SignInManager<Autor> SignInManager
<div class="container-fluid">
    <h1 style="    text-align: center;">@Model.Titulo</h1>

    <p>
        @Model.Conteudo
    </p>

    <hr />

    @if (SignInManager.IsSignedIn(User))
    {
        @using (Html.BeginForm("CreatePost", "Post", FormMethod.Post))
        {
            <div class="container">
                <h2>Comentário</h2>


                <div class="form-group">
                    @Html.TextArea("Conteudo", null, new { @class = "form-control", rows = 5, placeholder = "Escreva seu artigo aqui..." })
                    @Html.ValidationMessageFor(model => model.Conteudo, "", new { @class = "text-danger" })

                </div>

                <br />
                <button type="submit" class="btn btn-primary">Publicar</button>

            </div>
        }
    }
    <br />
    <hr />
    @foreach (var comentario in Model.Comentarios)
    {

        <div>
            <h5 class="mt-0">@comentario.Autor.UserName</h5>
            <p class="comment-content">
                @comentario.Conteudo
            </p>
        </div>

        <hr />

    }

</div>